<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/txt_item_card_nome_amigo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_card_editar_amigo"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_card_deletar_amigo"
            style="@style/botao2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:drawableLeft="@drawable/ic_delete3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/txt_item_card_telefone_amigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NÃºmero"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/txt_item_card_nome_amigo"
            tools:layout_editor_absoluteX="8dp" />

        <Button
            android:id="@+id/btn_card_acionar_amigo"
            style="@style/botao2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:drawableLeft="@drawable/ic_contact_mail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_card_editar_amigo" />

        <Button
            android:id="@+id/btn_card_editar_amigo"
            style="@style/botao2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:drawableLeft="@drawable/ic_edit"
            app:layout_constraintEnd_toStartOf="@id/btn_card_deletar_amigo"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>